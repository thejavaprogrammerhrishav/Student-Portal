<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hdsoft.portal.model.Student" table="student" catalog="studentportal">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" not-null="true"/>
        <property name="email" column="email" not-null="true"/>
        <property name="address" column="address" not-null="true"/>
        <property name="gender" column="gender" not-null="true"/>
        <property name="myclass" column="myclass" not-null="true"/>
     </class>
</hibernate-mapping>